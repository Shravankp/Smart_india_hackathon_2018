<html>

<head>
    <!-- Form stylesheet -->
    <link rel="stylesheet" href="css/form-elements.css">

    <!-- Favicon and touch icons -->
    <link rel="shortcut icon" href="assets/ico/favicon.png">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="assets/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="assets/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="assets/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="assets/ico/apple-touch-icon-57-precomposed.png">
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <style>
        a.forgot {
            color: blue;
        }
                
        .stepwizard-step p {
            margin-top: 10px;
        }
        
        .stepwizard-row {
            display: table-row;
        }
        
        .stepwizard {
            margin-top: 20px;
            display: table;
            width: 100%;
            position: relative;
        }
        
        .stepwizard-step button[disabled] {
            opacity: 1 !important;
            filter: alpha(opacity=100) !important;
        }
        
        .stepwizard-row:before {
            top: 14px;
            bottom: 0;
            position: absolute;
            content: " ";
            width: 100%;
            height: 1px;
            background-color: #ccc;
        }
        
        .stepwizard-step {
            display: table-cell;
            text-align: center;
            position: relative;
        }
        
        .btn-circle {
            width: 30px;
            height: 30px;
            text-align: center;
            padding: 6px 0;
            font-size: 12px;
            line-height: 1.428571429;
            border-radius: 15px;
        }

    </style>
</head>


<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3 sidenav">
                <ul class="nav navbar nav-stacked">
                    <li id="officer-profile" class="active nav-description"><a href="#officer-profile" style="color: black; text-decoration: none;">Profile</a></li>
                    <li id="upload-data" class="active nav-description"><a href="#upload-data-form" style="color: black; text-decoration: none;">Upload Dataset</a></li>
                </ul><br>
            </div>
            <div id="update-officer-profile" class="officer-forms col-lg-9">
                <h2>Profile</h2>
                <h3>Username : {{user.username}}</h3>
                <form role="form" class="login-form col-lg-7">
                    <div class="form-group">
                        <input type="hidden" class="form-control" id="userid" name="userid" value={{user._id}}>
                    </div>
                    <div class="form-group">
                        <input type="hidden" class="form-control" id="username" name="username" value={{user.username}}>
                    </div>
                    <div class="form-group">
                        <label for="firstname">Firstname</label>
                        <input type="text" class="form-control" id="firstname" placeholder="Enter Firstname" name="firstname" value={{currentUser.firstname}}>
                    </div>
                    <div class="form-group">
                        <label for="lastname">Lastname</label>
                        <input type="text" class="form-control" id="lastname" placeholder="Enter Lastname" name="lastname" value={{currentUser.lastname}}>
                    </div>
                    <div class="form-group">
                        <label for="designation">Designation:</label>
                        <input type="text" class="form-control" id="designation" placeholder="Enter Designation" name="designation" value={{currentUser.designation}}>
                    </div>
                    <div class="form-group">
                        <label for="ministry">Ministry:</label>
                        <input type="text" class="form-control" id="ministry" placeholder="Enter Ministry" name="ministry" value={{currentUser.ministry}}>
                    </div>
                    <div class="form-group">
                        <label for="state">State:</label>
                        <input type="text" class="form-control" id="state" placeholder="Enter State" name="state" value={{currentUser.state}}>
                    </div>
                    <div class="form-group">
                        <label for="department">Department:</label>
                        <input type="text" class="form-control" id="department" placeholder="Enter Department" name="department" value={{currentUser.department}}>
                    </div>
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="email" class="form-control" id="email" placeholder="Enter email" name="email" value={{currentUser.email}}>
                    </div>
                    <div class="form-group">
                        <label for="phone_number">Phone Number:</label>
                        <input type="number" class="form-control" id="phone" placeholder="Enter phone number" name="phone" value={{currentUser.phone}}>
                    </div>
                    <div class="form-group">
                        <label for="address">Address:</label>
                        <input type="text" class="form-control" id="address" placeholder="Enter address" name="address" value={{currentUser.address}}>
                    </div>
                    <button type="button" id="update-officer-profile-button" class="btn btn-default" onclick="">Send</button>
                </form>
            </div>
            <div id="upload-data-form" class="officer-forms col-lg-9">
                <h2 style="margin-top: 80px">Upload Dataset</h2>
                <div class="stepwizard">
                <div class="stepwizard-row setup-panel">
                    <div class="stepwizard-step">
                        <a href="#step1" type="button" class="btn btn-primary btn-circle">1</a>
                        <p>Step 1</p>
                    </div>
                     <div class="stepwizard-step">
                        <a href="#step2" type="button" class="btn btn-default btn-circle" disabled="disabled">2</a>
                        <p>Step 2</p>
                    </div>
                    <div class="stepwizard-step">
                        <a href="#step3" type="button" class="btn btn-default btn-circle" disabled="disabled">3</a>
                        <p>Step 3</p>
                    </div>
                </div>
                <form role="form" id="formUploader" enctype="multipart/form-data" action="/officer/upload" method="POST" class="login-form">
                    <div id="step1" class="setup-content" >Step 1
                        <fieldset>
                        <div class="form-group">
                            <label for="sector">Sector:</label>
                            <div>
                                <select class="custom-select" id="sector" name="sector">
                                    <option selected>Select a sector:</option>
                                    {{#each sectors}}
                                        <option value="{{this.sector}}">{{this.sector}}</option>
                                    {{/each}}
                            </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <h6>Add a sector: <button type="button" class="btn" onclick="createSectorFunct()">+</button></h6>
                            <input type="text" style="display:none" class="form-control" id="createSector" placeholder="Enter Sector" name="createSector">
                        </div>
                        <div class="form-group">
                            <label for="catalog">Catalog:</label>
                            <div>
                                <select class="custom-select" id="catalog" name="catalog">
                                    <option selected>Select a catalog:</option>
                                    {{#each catalogs}}
                                        <option value="{{this.title}}">{{this.title}}</option>
                                    {{/each}}
                            </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <h6>Add a catalog: <button type="button" class="btn" onclick="createCatalogFunct()">+</button></h6>
                            <input type="text" style="display:none" class="form-control" id="createCatalog" placeholder="Enter Catalog" name="createCatalog">
                        </div>
                        <div class="form-group">
                            <label id="catalogHead" style="display:none" for="description">Catalog Description:</label>
                            <textarea type="text" class="form-control" rows="4" id="description" style="display:none" placeholder="Enter catalog description" name="description"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="state">State Name:</label>
                            <input type="text" class="form-control" id="state" placeholder="Enter State name" name="state">
                        </div>
                        <div class="form-group">
                            <label for="title">Dataset Name:</label>
                            <input type="text" class="form-control" id="title" placeholder="Enter Dataset name" name="title" required>
                        </div>
                        <div class="form-group">
                            <label for="note">Dataset Description:</label>
                            <textarea type="text" class="form-control" rows="4" id="note" placeholder="Enter dataset description" name="note" required></textarea>
                        </div>
                        <div class="form-group">
                            <label for="dataset">Add new dataset:</label>
                            <button class="btn btn-primary nextBtn btn-lg pull-right" type="button">Next</button>
                        </div>
                        </fieldset>
                    </div>
                    <div class="form-group">
                        <div id="step2" class="setup-content">Step 2
                            <fieldset>
                            <div class="form-group options">
                                <label class="control-label" for="dataset_type">Dataset Type:</label>
                                <div class="checkbox">
                                    <label><input type="checkbox" name="filetype" id="json" value="json" >json</label>
                                    <label><input type="checkbox" name="filetype" id="csv" value="csv" >csv</label>
                                    <label><input type="checkbox" name="filetype" id="xml" value="xml" >xml</label>
                                    <label><input type="checkbox" name="filetype" id="txt" value="txt" >txt(ASCII)</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <div id="tyre-type">
                                    <label class="radio-inline">
	                          <input type="radio" name="tyre" value="free" checked />Free
	                      </label>
                                    <label class="radio-inline">
	                          <input type="radio" name="tyre" value="paid" />Paid
	                      </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="dataset_credibility">Dataset Credibility:</label>
                                <input type="number" class="form-control" id="credibility" placeholder="Enter Dataset credibility" name="credibility" required>
                            </div>
                            <div class="form-group">
                                <label id="upload_dataset" for="upload_dataset">Upload Dataset and Supporting files:</label>
                                <div>
                                    <input type="file" class="form-control-file" name="Uploader" accept=".json,.csv,.xml,.txt,.xlsx,.doc" multiple />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="keycolnum">Key Column Number</label>
                                <input type="number" class="form-control" id="keycolnum" placeholder="Enter Key column number" name="keycolnum">
                            </div>
                            <div class="form-group">
                                <label for="byteoffsetstart">Byte Start Offset Column Number</label>
                                <input type="number" class="form-control" id="byteoffsetstart" placeholder="Enter Byte Start Offset Column Number" name="byteoffsetstart">
                            </div>
                            <div class="form-group">
                                <label for="byteoffsetend">Byte End Offset Column Number</label>
                                <input type="number" class="form-control" id="byteoffsetend" placeholder="Enter Byte End Offset Column Number" name="byteoffsetend">
                            </div>
                            <div class="form-group">
                                <label for="license">License</label>
                                <input type="text" class="form-control" id="license" placeholder="Enter License type" name="license" required>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary nextBtn btn-lg pull-right" type="button">Next</button>
                            </div>
                            </fieldset>
                        </div>
                        <div id="step3" class="setup-content">Step 3
                            <fieldset>
                            <div class="checkbox">
                                <label><input type="checkbox" name="T&C" id="T&C" value="T&C" required>I accept the terms and conditions</label>
                            </div>
                            <div class="col-lg-10 col-lg-offset-2">
                                <button type="submit" class="btn btn-primary pull-right" name="submit" id="btnSubmit">Upload</button>
                            </div>
                            </fieldset>
                        </div>
                </form>
                </div>
            </div>
        </div>
        </div>


        <script>
            $(document).ready(function() {
                $(".officer-forms").hide();
                $("#update-officer-profile").show();

                $("#officer-profile").click(function() {
                    $(".officer-forms").hide();
                    $("#update-officer-profile").show();

                });
                $("#upload-data").click(function() {
                    $(".officer-forms").hide();
                    $("#upload-data-form").show();
                });


                $("#update-officer-profile-button").click(function() {
                    var data = {
                        userid: "",
                        username: "",
                        firstname: "",
                        lastname: "",
                        designation: "",
                        ministry: "",
                        state: "",
                        department: "",
                        email: "",
                        phone: "",
                        address: ""
                    };
                    data.userid = document.getElementById('userid').value;
                    data.username = document.getElementById('username').value;
                    data.firstname = document.getElementById('firstname').value;
                    data.lastname = document.getElementById('lastname').value;
                    data.designation = document.getElementById('designation').value;
                    data.ministry = document.getElementById('ministry').value;
                    data.state = document.getElementById('state').value;
                    data.department = document.getElementById('department').value;
                    data.email = document.getElementById('email').value;
                    data.phone = document.getElementById('phone').value;
                    data.address = document.getElementById('address').value;



                    if (data.userid != "" && data.username != "" && data.firstname != "" && data.lastname != "" && data.designation != "" && data.ministry != "" && data.state != "" && data.department != "" && data.email != "" && data.phone != "" && data.address != "") {
                        $.ajax({
                            type: 'POST',
                            url: '/officer/officer-profile',
                            async: false,
                            data: JSON.stringify(data),
                            contentType: 'application/json',
                            success: function(data) {
                                document.getElementById('userid').value = data.userid;
                                document.getElementById('username').value = data.username;
                                document.getElementById('firstname').value = data.firstname;
                                document.getElementById('lastname').value = data.lastname;
                                document.getElementById('designation').value = data.designation;
                                document.getElementById('ministry').value = data.ministry;
                                document.getElementById('state').value = data.state;
                                document.getElementById('department').value = data.department;
                                document.getElementById('email').value = data.email;
                                document.getElementById('phone').value = data.phone;
                                document.getElementById('address').value = data.address;
                                alert("Officer details successfully updated");
                            }
                        });
                    } else {
                        console.log(data.userid);
                        alert("Please fill all the details!!");
                    }
                });



            });

            function createSectorFunct() {
                var createSector = document.getElementById("createSector");
                if (createSector.style.display === "none") {
                    createSector.style.display = "block";
                } else {
                    createSector.style.display = "none";
                }
            }

            function createCatalogFunct() {
                var createCatalog = document.getElementById("createCatalog");
                var catalogHead = document.getElementById("catalogHead");
                var description = document.getElementById("description");
                if ((createCatalog.style.display === "none")) {
                    createCatalog.style.display = "block";
                    catalogHead.style.display = "block";
                    description.style.display = "block";
                } else {
                    createCatalog.style.display = "none";
                    catalogHead.style.display = "none";
                    description.style.display = "none";
                }
            }

            $(function() {
                var requiredCheckboxes = $('.options :checkbox[required]');
                requiredCheckboxes.change(function() {
                    if (requiredCheckboxes.is(':checked')) {
                        requiredCheckboxes.removeAttr('required');
                    } else {
                        requiredCheckboxes.attr('required', 'required');
                    }
                });
            });

            $(document).ready(function() {
                var options = {
                    beforeSubmit: showRequest, // pre-submit callback 
                    success: showResponse // post-submit callback 
                };

                // bind to the form's submit event 
                $('#formUploader').submit(function() {
                    $(this).ajaxSubmit(options);
                    // always return false to prevent standard browser submit and page navigation 
                    return false;
                });
            });

            // pre-submit callback 
            function showRequest(formData, jqForm, options) {
                alert('Uploading is starting.');
                return true;
            }

            // post-submit callback 
            function showResponse(responseText, statusText, xhr, $form) {
                alert('status: ' + statusText + '\n\nresponseText: \n' + responseText);
            }

            $(document).ready(function() {

                var navListItems = $('div.setup-panel div a'),
                    allWells = $('.setup-content'),
                    allNextBtn = $('.nextBtn');

                allWells.hide();

                navListItems.click(function(e) {
                    e.preventDefault();
                    var $target = $($(this).attr('href')),
                        $item = $(this);

                    if (!$item.hasClass('disabled')) {
                        navListItems.removeClass('btn-primary').addClass('btn-default');
                        $item.addClass('btn-primary');
                        allWells.hide();
                        $target.show();
                        $target.find('input:eq(0)').focus();
                    }
                });

                allNextBtn.click(function() {
                    var curStep = $(this).closest(".setup-content"),
                        curStepBtn = curStep.attr("id"),
                        nextStepWizard = $('div.setup-panel div a[href="#' + curStepBtn + '"]').parent().next().children("a"),
                        curInputs = curStep.find("input[type='text'],input[type='url']"),
                        isValid = true;

                    $(".form-group").removeClass("has-error");
                    for (var i = 0; i < curInputs.length; i++) {
                        if (!curInputs[i].validity.valid) {
                            isValid = false;
                            $(curInputs[i]).closest(".form-group").addClass("has-error");
                        }
                    }

                    if (isValid)
                        nextStepWizard.removeAttr('disabled').trigger('click');
                });

                $('div.setup-panel div a.btn-primary').trigger('click');
            });

        </script>

        <!-- jQuery Plugins -->
        <script src="assets/js/jquery.backstretch.min.js"></script>
